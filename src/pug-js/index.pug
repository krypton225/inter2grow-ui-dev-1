            section(class="right")
                span(class="right__sign-up")
                    | Don't have have an account?
                    a(href="#") Sign up

                div(class="right__social")
                    span(class="right__social__title") Welcome back!

                    a(href="right__social__google") Continue with Google
                    a(href="right__social__twitter") Continue with Twitter

                div(class="right__or")
                    span(class="right__or__text") or

                form(class="right__form")
                    div(class="right__form__email")
                        div(class="right__form__header")
                            label(for="email") Enter your email address
                        input#email-address(type="email" name="email")

                    div(class="right__form__password")
                        div(class="right__form__header")
                            label(for="password") Enter your password
                            span(class="hide") hide
                        input#password(type="password" name="password")

                    div(class="right__form__footer")
                        a(href="" class="right__form__forget-left") Forget your password

                        div(class="right__form__footer-right")
                            input#sign-in(type="submit" value="sign-in")

